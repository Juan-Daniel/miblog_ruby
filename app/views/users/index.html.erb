<div class="container">
	<h1>Usuarios</h1>

	<table class="table table-striped">
		<thead>
			<tr>
				<td>Nombre</td>
				<td>Email</td>
			</tr>
		</thead>

		<tbody>
			<% @usuarios.each do |u| %>
				<tr>
					<td><%= u.nombre %></td>
					<td><%= u.email %></td>
					<td><%= link_to 'Ver', user_path(u) %></td>
					<td><%= link_to 'Editar', edit_user_path(u) %></td>
					<td><%= link_to 'Eliminar', user_path(u), method: :delete, data: {confirm: 'Â¿Estas seguro?'} %></td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<%= link_to "Nuevo usuario", new_user_path %>
	<%= link_to "Iniciar sesion", new_session_path %>

</div>

